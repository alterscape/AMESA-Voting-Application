<table>
  <tr>
    <th>Ballot</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ballots.each do |ballot| %>
  <tr>
    <td><%= ballot.title %></td>
    <td><%= link_to 'Show', [:admin, ballot] %></td>
    <td><%= link_to 'Edit', edit_admin_ballot_path(ballot) %></td>
    <td><%= link_to 'Destroy', [:admin, ballot], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

